<%- include('./partials/layout') %> 

<h2 class="page-header">Remove <%= item.name %> </h2>

<main class="delete-container">

<p class="confirmation">Are you sure you want to remove this product?</p>

<form method="POST" action="<%= item.url %>/delete">
  <%- include('./partials/admin_validation') %> 

  <input type="hidden" name="itemid" value="<%= item._id %>">
  <button class="btn-primary btn-delete">REMOVE PRODUCT</button>
  <button class="btn-primary btn-cancel" type="button"><a href="<%= item.url %>">CANCEL</a></button>
</form>

</main>

<%- include('./partials/footer') %> 

</body>
</html>